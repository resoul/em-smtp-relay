{
  "name": "emercury/smtp-relay",
  "description": "Emercury SMTP Mail Plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5",
    "brain/monkey": "^2.6",
    "yoast/phpunit-polyfills": "^1.0",
    "phpstan/phpstan": "^2.1",
    "slevomat/coding-standard": "~8.0",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Emercury\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Emercury\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml -p --parallel=10 --no-cache",
    "phpcs-fix": "phpcbf --standard=phpcs.xml -p --parallel=10 --no-cache",
    "phpstan": "phpstan analyse -c phpstan.neon --no-progress --memory-limit 4048M",
    "test": "phpunit tests",
    "test-coverage": "XDEBUG_MODE=coverage phpunit tests --coverage-text=tmp/coverage.txt --coverage-html tmp/coverage-report"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
