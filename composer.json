{
  "name": "emercury/smtp-relay",
  "description": "Emercury SMTP Mail Plugin",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5",
    "brain/monkey": "^2.6",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Emercury\\Smtp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Emercury\\Smtp\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests",
    "test-coverage": "XDEBUG_MODE=coverage phpunit tests --coverage-text=tmp/coverage.txt --coverage-html tmp/coverage-report"
  }
}